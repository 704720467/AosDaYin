<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:gravity="center">

    <LinearLayout
        android:id="@+id/top_lay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/skinpic_blue"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/print_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="打印机型号"
            android:textColor="@color/white"
            android:textSize="18.0sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_lay"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重明终端标识打印系统"
            android:textColor="@color/blue"
            android:textSize="30sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_lay">


        <Button
            android:id="@+id/Button01"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_alignLeft="@+id/Button03"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/Button03"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bind"
            android:padding="10dp"
            android:text="退出打印系统"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/Button04"
            android:layout_width="200dp"
            android:layout_height="45dip"
            android:layout_above="@+id/Button01"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bind"
            android:padding="10dp"
            android:text="@string/aos_old_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/Button03"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_above="@+id/Button04"
            android:layout_alignLeft="@+id/Button04"
            android:layout_alignRight="@+id/Button04"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bind"
            android:padding="10dp"
            android:text="@string/aos_xinxiqiandayin_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/Button02"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_above="@+id/Button03"
            android:layout_alignLeft="@+id/Button03"
            android:layout_alignRight="@+id/Button03"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bind"
            android:padding="10dp"
            android:text="原单识别标签打印"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/ui_btn_print"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_above="@+id/Button02"
            android:layout_alignLeft="@+id/Button03"
            android:layout_alignRight="@+id/Button03"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bind"
            android:padding="10dp"
            android:text="@string/aos_huoqiandayin_title"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RelativeLayout>
    <!--  android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"-->

</RelativeLayout>